# Global settings for logging and system configuration
defaults
logfile /var/log/msmtp.log
syslog on
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# ProtonMail Account Setup
account proton
host smtp.protonmail.ch
port 587
auth on
user server@chri.no
passwordeval "cat /root/protonmail_password"
from server@chri.no

# Rewrite/Override the visible Header From address
set_from_header on

# Set the default account for system mail to use the 'proton' settings
account default: proton

aliases /etc/aliases
